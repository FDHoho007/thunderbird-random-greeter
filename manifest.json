{
    "manifest_version": 2,
    "name": "Random Greeter",
    "description": "Allows you to place randomly choosen greetings into your signature.",
    "version": "1.0",
    "author": "Fabian Dietrich",
    "browser_specific_settings": {
        "gecko": {
            "id": "randomgreeter@fdhoho007.de",
            "strict_min_version": "78.0"
        }
    },
    "permissions": [
        "accountsRead",
        "compose"
    ],
    "background": {
        "page": "background.html"
    },
    "icons": {
        "64": "images/internet.png",
        "32": "images/internet-32px.png",
        "16": "images/internet-16px.png"
    }
}